<!DOCTYPE html>
<html>

<head>
  <title>Ciracas Backoffice</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <meta charset="utf-8" />
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <meta name="description" content="Accordion examples">
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no">
  <link rel="icon" href="<%="/img/logorsudciracas.png"%>" type="image/gif" sizes="16x16">
  
</head>

<body>

  <%= render '/backoffice/template/css_bo' %>
  <div class="wrapper">
    <%= render '/backoffice/template/sidemenu_bo' %>
    <div id="content">
      <%= render '/backoffice/template/header_bo' %>
      <%= yield %>
    </div>
  </div>
</body>

</html>

<script type="text/javascript">
  $(document).ready(function () {
    $('#sidebarCollapse').on('click', function () {
      $('#sidebar').toggleClass('active');
      $(this).toggleClass('active');
    });
    $('#titleEdit').hide();

  });
  
  $(function () {
    $('[data-toggle="tooltip"]').tooltip()
  })

  $('.btnedit').click(function(){
    $('#titleAdd').hide();
    $('#titleEdit').show();
  })

  $(".btnreset").click(function(){
    $('#titleEdit').hide();
    $('#titleAdd').show();
  })

</script>