  padding: 20px 55px;
  border-bottom: 2px solid #888AA2;
  
}
.navbars .nav-item a{
  color: #888AA2;
  font-size: 18px;
  font-weight: 800;
}
.navbars .nav-item a:hover{
  color: #222534;
  border-bottom: 3px solid #888AA2;
}
.navbars .nav-item a:active{
  color: #222534;
}

.navbars .chat:hover{
  transition: 0.5s ease-in-out;
  transform: scale(1.1);
  overflow: hidden;
}
.img-banner{
  height : 100%;
  width: 100%;
}
.container {
  height: 100%;
  margin: 0;
    
}
</style>


