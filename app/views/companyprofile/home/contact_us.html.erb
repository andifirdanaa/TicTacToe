<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<script>
    function kirims(){

    var first_name = document.getElementById("first_name").value;
    var last_name = document.getElementById("last_name").value;
    var email = document.getElementById("email").value;
    var message = document.getElementById("message").value;

    if(first_name == ''){
      alert("Nama Anda Belum Diisi");
    }else if(email == ''){
      alert("Alamat Email Belum Diisi");
    }else if(last_name == ''){
      alert("Nama Anda Belum Diisi");
    }else if(message == ''){
      alert("Pesan Anda Belum Diisi");
    }else{      
      $("#simpan").trigger("click");
    }
  }

  $(document).ready(function (e) {
		$("#myformHubungi").on('submit', (function (e) {

			e.preventDefault();
			$.ajax({
				url: "/companyprofile/home/aksi_contact_us",
				type: "POST",
				data: new FormData(this),
				contentType: false,
				cache: false,
				processData: false,
				success: function (result) {
                console.log(result);
                // return
          if (result.status == true) {
              swal("Pesan Terkirim!", "Balasan akan dikirimkan lewat email!", "success").then((value) => {
                    window.location = "";
                });  
          } else {
              swal("Gagal", "Pesan tidak Berhasil Dikirim", "danger").then((value) => {
                    window.location = "";
                }); 
          }
				}
			});
		}));
	});
(function($) {
$.fn.visible = function(partial) {
  var $t            = $(this),
      $w            = $(window),
      viewTop       = $w.scrollTop(),
      viewBottom    = viewTop + $w.height(),
      _top          = $t.offset().top,
      _bottom       = _top + $t.height(),
      compareTop    = partial === true ? _bottom : _top,
      compareBottom = partial === true ? _top : _bottom;
return ((compareBottom <= viewBottom) && (compareTop >= viewTop));

};
  
})(jQuery);

var win = $(window);

var allMods = $(".module");

allMods.each(function(i, el) {
var el = $(el);
if (el.visible(true)) {
  el.addClass("already-visible"); 
} 
});

win.scroll(function(event) {

allMods.each(function(i, el) {
  var el = $(el);
  if (el.visible(true)) {
    el.addClass("come-in"); 
  } 
});

});
</script>
