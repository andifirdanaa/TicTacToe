    <!-- End Detail Karyawan from SDM -->

    <!-- Start Pilih Jumlah Pinjaman -->
    <%= render "/my_template/pengajuan_pilih_jml_pinjaman" %>
    <!-- End Pilih Jumlah Pinjaman -->


    <!-- Start Detail Biaya Pengajuan -->
