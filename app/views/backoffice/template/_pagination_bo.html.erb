<div>
    <% if @data['content']['data'].present? %>
        <ul class="pagination">
            <% if @meta['prev_page'].to_i > 0 %>
            <li class="page-item"><a class="page-link" href="?page=<%= @meta['prev_page'].to_i%>&keyword=<%= @key %>">Previous</a></li>
            <% end %>

            <% if @meta['total_pages'].to_i > 1 %>
            <%
                i = 1
                while i <= @meta['total_pages'].to_i do
                if (@meta['current_page'].to_i == i.to_i)
                    var = 'active'
                else
                    var = ''
                end
            %>
            <%
                i += 1
                end
            %>
            <li class="page-item "><a class="page-link" href="?page=<%= @meta['current_page'] %>&keyword=<%= @key %>"><%= @meta['current_page'] %></a></li>
                                
            <li class="page-item "><a class="page-link">To</a></li>
                                
            <li class="page-item "><a class="page-link" href="?page=<%= @meta['total_pages'] %>&keyword=<%= @key %>"><%= @meta['total_pages'] %></a></li>
            <% end %>

            <% if @meta['next_page'].to_i > 0 %>
            <li class="page-item"><a class="page-link" href="?page=<%= @meta['next_page'].to_i %>&keyword=<%= @key %>">Next</a></li>
            <% end %>
        </ul>
    <%end%>                
</div>