<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<div class="card">
    <div class="card-body">
        <div class="card-title"><h4><i class="fab fa-buffer"></i> Akses Modul</h4></div>
        <div class="card-content">    
            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="data-tab" data-toggle="tab" href="#data" role="tab" aria-controls="data"
                        aria-selected="true">Data</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="form-tab" data-toggle="tab" href="#form" role="tab" aria-controls="form"
                        aria-selected="false">Form</a>
                </li>
            </ul>
            <br>
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="data" role="tabpanel" aria-labelledby="data-tab">
                    <!-- Search Box -->
                    <strong><i class="fa fa-search"></i> Cari</strong>
                    <div class="card">
                        <div class="card-body">
                            <form>
                                <div class="input-group mb-3">
                                    <input type="hidden" name="page" value="<%= @page %>">
                                    <input type="text" id="keyword" name="keyword" class="form-control" placeholder="Cari..." value="<%= @keyword %>">
                                    <div class="input-group-append">
                                        <button class="btn btn-primary" type="submit"><i class="fa fa-search"></i></button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <!-- Search Box -->
                    <p>
                    <!-- LIST DATA -->
                    <div class="card">
                        <div class="card-body">
                            <div class="table-responsive-sm">
                                <table class="table table-hover table-sm table-bordered table-striped">
                                    <!-- table-striped -->
                                    <thead>
                                        <tr>
                                            <!-- <tr style="background: rgb(156, 173, 240);"> -->
                                            <th scope="col">#</th>
                                            <th scope="col">Modul</th>
                                            <th scope="col">User Role</th>
                                            <th scope="col">Aksi</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% 
                                            if @data['content']['data'].present?
                                            @page = params['page'].to_i
                                            if params['page'] == nil || params['page'] == 1
                                            @no = 0
                                            else
                                                @no = (@limit * @page) - @limit
                                            end

                                            @data['content']['data'].each do |res| 
                                        %>
                                            <tr>
                                                <td><%= @no = @no+1 %></td>
                                                <td><%= res['name'] %></td>
                                                <td><%= res['user_role_name'] %></td>
                                                <td>
                                                    <button class="btnedit btn btn-sm btn-primary" id="aksi_id" onclick="aksi('<%=res.to_json %>')" title="Edit">
                                                        <i class="fa fa-edit"></i>
                                                    </button>
                                                    
                                                </td>
                                            </tr>
                                        <% end %>
                                        <% else %>
                                                <tr>
                                                    <td colspan="19" align="center">Maaf, tidak ada data.</td>
                                                </tr>
                                        <% end %>
                                    </tbody>
                                </table>
                            </div>
                            <!-- PAGINATION aja -->
                                
                                    <%= 
                                        @myparaam = '&keyword='+@key.to_s
                                        render '/backoffice/template/pagination_bo' 
                                    %>
                                
                            <!-- PAGINATION -->
                        </div>
                    </div>
                </div>
                <div class="tab-pane fade" id="form" role="tabpanel" aria-labelledby="form-tab">
                    <strong id="titleAdd"><i  class="fa fa-plus-square"></i> Tambah Data</strong>
                    <strong id="titleEdit"><i class="fa fa-edit"></i> Ubah Data</strong>
                    <div class="card">
                        <div class="card-body">
                            <form method="POST" class="form-horizontal" action="/backoffice/master/aksi_modul_akses" id="form_id">
                                <input type="text" class="form-control" style="display: none" name="id" id="id_id">

                                <div class="form-group">
                                    <label class="control-label col-sm-2" for="email">User Role:</label>
                                    <div class="col-sm-10">
                                        <select id="user_id" name="user" class="form-control">
                                            <% @data_user['content']['data'].each do |user| %>
                                                <option value="<%= user['id'] %>"><%= user['role'] %></option>
                                            <% end %>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-sm-2" for="email">Modul Name:</label>
                                    <div class="col-sm-10">
                                        <select id="modul_id" name="modul" class="form-control">
                                            <% @data_modul['content']['data'].each do |modul| %>
                                                <option value="<%= modul['id'] %>"><%= modul['modul'] %></option>
                                            <% end %>
                                        </select>
                                    </div>
                                </div>
                                 
                                <div class="form-group">
                                    <div class="col-sm-offset-2 col-sm-10">
                                        <button type="submit" class="btn btn-primary">Submit</button>
                                        <button type="reset" class="btnreset btn btn-warning">Reset</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
<script>

    function aksi(data_edit) {
        parse = JSON.parse(data_edit);
        console.log(parse);
        id = parse.id

        user_id = parse.user_role_id
        modul_id = parse.modul_id

        $('#id_id').val(id)
        $('#user_id').val(user_id)
        $('#modul_id').val(modul_id)

        $('#form-tab').click();
    }

    function delete_(_id){
        var id_ = _id

        window.location = '/backoffice/master/delete_akses?delete_modul='+id_;
    }
</script>