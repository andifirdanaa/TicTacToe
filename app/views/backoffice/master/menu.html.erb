<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<div class="card">
    <div class="card-body">
        <div class="card-title"><h4><i class="fa fa-database"></i> Menu</h4></div>
        <div class="card-content">
            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="data-tab" data-toggle="tab" href="#data" role="tab" aria-controls="data"
                        aria-selected="true">Data</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="form-tab" data-toggle="tab" href="#form" role="tab" aria-controls="form"
                        aria-selected="false">Form</a>
                </li>
            </ul>
            <br>
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="data" role="tabpanel" aria-labelledby="data-tab">
                    <!-- Search Box -->
                    <strong><i class="fa fa-search"></i> Cari</strong>
                    <div class="card">
                        <div class="card-body">
                            <form>
                                <div class="input-group mb-3">
                                    <input type="hidden" name="page" value="<%= @page %>">
                                    <input type="text" id="keyword" name="keyword" class="form-control" placeholder="Cari..." value="<%= @keyword %>">
                                    <div class="input-group-append">
                                        <button class="btn btn-primary" type="submit"><i class="fa fa-search"></i></button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <!-- Search Box -->
                    <p>
                    <!-- LIST DATA -->
                    <div class="card">
                        <div class="card-body">
                            <div class="table-responsive-sm">
                                <table class="table table-hover table-striped table-sm table-bordered">
                                    <!-- table-striped -->
                                    <thead>
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col">Menu</th>
                                            <th scope="col">URL</th>
                                            <th scope="col">Pages</th>
                                            <th scope="col">Urutan</th>
                                            <th scope="col">Status</th>
                                            <th scope="col">Aksi</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <%  if @data['content']['data'].present?

                                            @page = params['page'].to_i
                                            if params['page'] == nil || params['page'] == 1
                                            @no = 0
                                            else
                                                @no = (@limit * @page) - @limit
                                            end
                                            @data['content']['data'].each do |res| 
                                         %>
                                            <tr>
                                                <td><%= @no = @no+1 %></td>
                                                <td><%= res['menu'] %></td>
                                                <td><%= res['url'] %></td>
                                                <td><%= res['page_id'] %></td>
                                                <td><%= res['status'] != 0 ? res['urutan'] : 0 %></td>
                                                <td align="center">
                                                    <i class="fa <%= res['status'].to_i == 1 ? 'fa fa-check' : 'fa fa-close' %>"
                                                            data-toggle="tooltip" data-placement="top" title="<%= res['status'].to_i == 1 ? 'Aktif' : 'Tidak Aktif' %>">
                                                    </i>
                                                </td>
                                                <td>
                                                    <button class="btnedit btn btn-sm btn-primary" id="aksi_id" onclick="aksi('<%=res.to_json %>')" title="Edit">
                                                        <i class="fa fa-edit"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                        
                                        <% end %>
                                        <% else %>
                                                <tr>
                                                    <td colspan="19" align="center">Maaf, tidak ada data.</td>
                                                </tr>
                                        <% end %>
                                    </tbody>
                                </table>
                            </div>
                             <!-- PAGINATION aja -->
                                
                                    <%= 
                                        @myparaam = '&keyword='+@key.to_s
                                        render '/backoffice/template/pagination_bo' 
                                    %>
                                
                            <!-- PAGINATION -->
                        </div>
                    </div>
                </div>
                <div class="tab-pane fade" id="form" role="tabpanel" aria-labelledby="form-tab">
                    <strong id="titleAdd"><i  class="fa fa-plus-square"></i> Tambah Data</strong>
                    <strong id="titleEdit"><i class="fa fa-edit"></i> Ubah Data</strong>
                    <div class="card">
                        <div class="card-body">
                            <form method="POST" class="form-horizontal" action="/backoffice/master/aksi_menu" id="form_id">
                                <input type="text" class="form-control" style="display: none" name="id" id="id_id" >

                                <div class="form-group">
                                    <label class="control-label col-sm-2" for="email">Menu:</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" name="menu" id="menu_id" >
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-sm-2" for="pwd">Content:</label>
                                    <div class="col-sm-6">
                                        <select id="content_id" name="content" class="form-control" onchange="myFunction()">
                                            <option value="url">URL</option>
                                            <option value="pages">PAGES</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group" style="display:block;" id='url'>
                                    <label class="control-label col-sm-2" for="email">URL:</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" name="url" id="url_id" >
                                    </div>
                                </div>
                                <div class="form-group" style="display:none;" id='pages'>
                                    <label class="control-label col-sm-2" for="email">Pages:</label>
                                    <div class="col-sm-10">
                                        <select id="pages_id" name="pages" class="form-control">
                                        <%  if @datapages['content']['data'].present?
                                            @datapages['content']['data'].each do |res| 
                                         %>
                                         <option value=<%= res['id'] %>><%= res['page'] %></option>
                                         <% end %>
                                        <% end %>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                <label class="control-label col-sm-2" for="pwd">Urutan:</label>
                                    <div class="input-group ml-3">
                                        <span class="input-group-btn">
                                            <button type="button" class="btn btn-danger btn-number minus"  data-type="minus" data-field="quant[2]">
                                                <span class="fa fa-minus"></span>
                                            </button>
                                        </span>
                                        <input type="number" id="quantity"  name="urutan" class="form-control input-number col-md-3" value="0" min="0" max="100">
                                        <span class="input-group-btn">
                                            <button type="button" class="btn btn-success btn-number plus" data-type="plus" data-field="quant[2]">
                                                <span class="fa fa-plus"></span>
                                            </button>
                                        </span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-sm-2" for="email">Parents:</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" name="parents" id="parents_id" >
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-sm-2" for="pwd">Status:</label>
                                    <div class="col-sm-6">
                                        <select id="status_id" name="status" class="form-control">
                                            <option value="1">Aktif</option>
                                            <option value="0">Non Aktif</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-offset-2 col-sm-10">
                                        <button type="submit" class="btn btn-primary">Submit</button>
                                        <button type="reset" class="btnreset btn btn-warning">Reset</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<script>

    
    function aksi(data_edit)
    {
        parse = JSON.parse(data_edit);
        id = parse.id
        menu = parse.menu
        url = parse.url
        status_id = parse.status
        page_id = parse.page_id
        urutan_id = parse.urutan
        content = parse.content
        parents_id = parse.parents


        $('#id_id').val(id)
        $('#menu_id').val(menu)
        $('#url_id').val(url)
        $('#parents_id').val(parents_id)
        $('#quantity').val(urutan_id)
        $('#status_id').val(status_id)
        $('#content_id').val(content)
        $('#pages_id').val(page_id)
        if (content == 'url'){
            document.getElementById("pages").style.display = "none";
            document.getElementById("url").style.display = "block";
        } else {
            document.getElementById("url").style.display = "none";
            document.getElementById("pages").style.display = "block";
        }
        $('#form-tab').click();
    }

    function myFunction(){
        content = $('#content_id').val();
        if (content == 'url'){
            document.getElementById("pages").style.display = "none";
            document.getElementById("url").style.display = "block";
        } else {
            document.getElementById("url").style.display = "none";
            document.getElementById("pages").style.display = "block";
        }
    }

    $(document).ready(function(){

    var quantitiy=0;
   $('.plus').click(function(e){
        
        // Stop acting like a button
        e.preventDefault();
        // Get the field name
        var quantity = parseInt($('#quantity').val());
        
        // If is not undefined
            
            $('#quantity').val(quantity + 1);

          
            // Increment
        
    });

     $('.minus').click(function(e){
        // Stop acting like a button
        e.preventDefault();
        // Get the field name
        var quantity = parseInt($('#quantity').val());
        
        // If is not undefined
      
            // Increment
            if(quantity>0){
            $('#quantity').val(quantity - 1);
            }
    });
    
});
</script>